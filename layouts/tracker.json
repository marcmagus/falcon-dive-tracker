//sets the trackers layout
//more info: https://github.com/black-sliver/PopTracker/blob/master/doc/PACKS.md#layouts 
{
    "tracker_default": {
        "type": "container",
        "background": "#000000",
        "content": {
            "type": "dock",
            "dropshadow": true,
            "content": [
                {
                    "type": "dock",
                    "dock": "left",
                    "v_alignment": "stretch",
                    "content": [
                        {
                            "type": "group",
                            "header": "Items",
                            "dock": "top",
                            "content": {
                                "type": "layout",
                                "key": "shared_item_grid"
                            }
                        }
                    ]
                },
                {
                    "type": "tabbed",
                    "tabs": [
                        {
                            "title": "Overworld",
                            "content": {
                                "type": "map",
                                "maps": [
                                    "overworld"
                                ]
                            }
                        },
                        {
                            "title": "Underground",
                            "content": {
                                "type": "map",
                                "maps": [
                                    "underground"
                                ]
                            }
                        },
                        {
                            "title": "Moon",
                            "content": {
                                "type": "map",
                                "maps": [
                                    "moon"
                                ]
                            }
                        },
                        {
                            "title": "All",
                            "content": {
                                "type": "map",
                                "maps": [
                                    "overworld",
                                    "underground",
                                    "moon"
                                ]
                            }
                        }
                    ]
                }
            ]
        }
    },
    "tracker_horizontal": {
        "type": "container",
        "background": "#000000",
        "content": {
            "type": "dock",
            "dropshadow": true,
            "content": [
                {
                    "type": "dock",
                    "dock": "bottom",
                    "content": [
                        {
                            "type": "group",
                            "header": "Items",
                            "dock": "left",
                            "margin": "0,0,3,0",
                            "content": {
                                "type": "layout",
                                "h_alignment": "center",
                                "v_alignment": "center",
                                "key": "shared_item_grid"
                            }
                        },
                        {
                            "type": "group",
                            "header": "Bosses",
                            "dock": "right",
                            "content": {
                                "type": "layout",
                                "key": "shared_boss_grid"
                            }
                        }
                    ]
                },
                {
                    "type": "dock",
                    "dock": "top",
                    "h_alignment": "stretch",
                    "v_alignment": "stretch",
                    "content": [
                        {
                            "type": "map",
                            "h_alignment": "stretch",
                            "v_alignment": "stretch",
                            "maps": [
                                "overworld"
                            ]
                        },
                        {
                            "type": "dock",
                            "dock": "right",
                            "orientation": "vertical",
                            "h_alignment": "stretch",
                            "v_alignment": "stretch",
                            "content": [
                                {
                                    "type": "map",
                                    "maps": [
                                        "underground",
                                    ]
                                },
                                {
                                    "type": "map",
                                    "maps": [
                                        "moon",
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    }
}
